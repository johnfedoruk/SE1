<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:fitsSystemWindows="true"
    tools:context="net.javacrypt.se1.AddExperiment">

    <TextView
        android:layout_width="wrap_content"
        android:text="Study Title"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtStudyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Study Type"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtStudyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Group within Experiment"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtGroupWithinExperiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Start Date"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtStartDate"
        android:layout_width="match_parent"
        android:inputType="date"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="End Date"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtEndDate"
        android:layout_width="match_parent"
        android:inputType="date"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Experimenters"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/txtExperimenters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Notes"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/txtNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btCreateExperiment"
        android:text="Create Experiment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

</LinearLayout>
